<style>
    {% for currency in currencies %}
    .currency-{{ currency.stringValue }}-item,
    .currency-{{ currency.stringValue }}-status {
        display: none;
    }

    .currency-{{ currency.stringValue }} .currency-{{ currency.stringValue }}-item {
        display: block;
    }

    .currency-{{ currency.stringValue }} .currency-{{ currency.stringValue }}-status {
        display: inline-block;
    }
    {% endfor %}
</style>